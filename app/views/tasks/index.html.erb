<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>ToDo List</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> ... <%= task.status %></li>
    <% end %>
  </ul>
  
  <%= link_to '新規追加', new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Sign up', signup_path %>
  <%= link_to 'Login', login_path %>
<% end %>